{
  "gemini_api_key": "YOUR_GEMINI_API_KEY_HERE",
  "gemini_model": "gemini-pro",
  "gemini_image_model": "gemini-pro-vision",
  "logging": {
    "level": "INFO",
    "file": "logs/storyboard_gen.log",
    "max_size_mb": 10,
    "backup_count": 3
  },
  "generation": {
    "generate_images": true,
    "image_width": 800,
    "image_height": 450,
    "max_content_length": 50000
  },
  "output": {
    "default_format": "all",
    "output_directory": "storyboards"
  },
  "google_cloud": {
    "enabled": false,
    "project_id": "YOUR_GCP_PROJECT_ID",
    "storage_bucket": "YOUR_GCS_BUCKET",
    "credentials_path": "gcp_credentials.json"
  },
  "advanced": {
    "use_character_database": false,
    "character_db_path": "data/characters.json",
    "default_camera_angle": "Medium Shot",
    "default_camera_movement": "Static",
    "scene_format_template": "Scene {scene_number} - {location} - {time_of_day}"
  }
}